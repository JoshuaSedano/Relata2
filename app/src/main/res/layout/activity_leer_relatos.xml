<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrincipalFondo"
    android:foregroundTint="@color/colorPrincipalFondo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TuActividad"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="-61dp">
        <!-- BARRA SUPERIOR -->

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="411dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorTextoBlanco"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Hola &quot;Usuario&quot;"
            tools:ignore="MissingConstraints">

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="Icono Menú"
            android:src="@drawable/menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,MissingConstraints" />

        <!-- LOGO -->


        <ImageView
            android:id="@+id/logo"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginStart="172dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="173dp"
            android:src="@drawable/logopng"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:ignore="ContentDescription" />

        <!-- CONTENIDO-->

        <TextView
            android:id="@+id/etCabecera"
            android:layout_width="276dp"
            android:layout_height="48dp"
            android:ems="10"
            android:fontFamily="@font/rajdhani_bold"
            android:gravity="center"
            android:text="¡Vamos a leer relatos!"
            android:textAlignment="center"
            android:textColor="@color/colorTextoBlanco"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <!-- 'INICIAR RELATO' -->

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etCabecera"
            app:srcCompat="@drawable/separador"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/txtBuscador"
            android:layout_width="276dp"
            android:layout_height="48dp"
            android:fontFamily="@font/rajdhani_light"

            android:gravity="center"
            android:text="Puedes buscar un relato:"
            android:textAlignment="center"
            android:textColor="@color/colorTextoBlanco"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            tools:ignore="Autofill,HardcodedText,LabelFor,TextSizeCheck" />

        <TextView
            android:id="@+id/iniciarRelatoText5"
            android:layout_width="282dp"
            android:layout_height="41dp"
            android:background="@drawable/boton_redondeado_blanco"
            android:fontFamily="@font/rajdhani"
            android:textAlignment="center"
            android:textColor="@color/colorPrincipalFondo"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtBuscador"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <ImageView
            android:id="@+id/imgLupa"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/iniciarRelatoText5"
            app:layout_constraintStart_toEndOf="@+id/iniciarRelatoText5"
            app:layout_constraintTop_toBottomOf="@+id/txtBuscador"
            app:srcCompat="@drawable/buscar"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iniciarRelatoText5"
            app:srcCompat="@drawable/separador"
            tools:ignore="ContentDescription,MissingConstraints" />


        <EditText
            android:id="@+id/editTextText10"
            android:layout_width="276dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:fontFamily="@font/rajdhani_light"
            android:inputType="text"
            android:text="O puedes leer relatos destacados:"
            android:textAlignment="center"
            android:textColor="@color/colorTextoBlanco"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8"
            tools:ignore="Autofill,HardcodedText,LabelFor,MissingConstraints,TextSizeCheck" />

        <Button
            android:id="@+id/btnRelato1Leer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/rajdhani_bold"
            android:text="&quot;Relato 1&quot;"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextText10"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

        <TextView
            android:id="@+id/editTextText12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/rajdhani_bold"
            android:gravity="center_horizontal"
            android:inputType="text"
            android:minHeight="48dp"
            android:text="Escrito por Autor 2 y Autora 3"
            android:textColor="@color/colorTextoBlanco"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnRelato1Leer"
            tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,TextViewEdits" />

        <Button
            android:id="@+id/btnLeerRelato2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/rajdhani_bold"
            android:text="&quot;Relato 2&quot;"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextText12"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

        <TextView
            android:id="@+id/editTextText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/rajdhani_bold"
            android:gravity="center_horizontal"
            android:inputType="text"
            android:minHeight="48dp"
            android:text="Escrito por Autor 2 y Autora 3"
            android:textColor="@color/colorTextoBlanco"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLeerRelato2"
            tools:ignore="HardcodedText,TextViewEdits" />

        <Button
            android:id="@+id/button6"
            android:layout_width="155dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/rajdhani_bold"
            android:text="Ver más"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextText3"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/back"
            tools:ignore="ContentDescription,MissingConstraints"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="680dp" />

        <!-- BARRA INFERIOR -->

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="411dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorSecundarioClaro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/btnBAck"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/toolbar2"
            app:srcCompat="@drawable/back"
            tools:ignore="ContentDescription" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
