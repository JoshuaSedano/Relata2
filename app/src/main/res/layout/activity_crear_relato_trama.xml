<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrincipalFondo"
    android:foregroundTint="@color/colorPrincipalFondo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TuActividad"
        tools:layout_editor_absoluteX="-84dp"
        tools:layout_editor_absoluteY="16dp">

        <!-- BARRA SUPERIOR -->

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="411dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorTextoBlanco"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Hola &quot;Usuario&quot;"
            tools:ignore="MissingConstraints">

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="Icono Menú"
            android:src="@drawable/menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,MissingConstraints" />

        <!-- LOGO -->


        <ImageView
            android:id="@+id/logo"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginStart="172dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="173dp"
            android:src="@drawable/logopng"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:ignore="ContentDescription" />

        <!-- CONTENIDO-->

        <TextView
            android:id="@+id/etCabecera"
            android:layout_width="276dp"
            android:layout_height="48dp"
            android:ems="10"
            android:fontFamily="@font/rajdhani_bold"
            android:gravity="center"
            android:text="¡Vamos a crear un nuevo relato!"
            android:textAlignment="center"
            android:textColor="@color/colorTextoBlanco"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/txtBuscador"
            android:layout_width="276dp"
            android:layout_height="48dp"
            android:ems="10"
            android:fontFamily="@font/rajdhani_regular"
            android:inputType="text"
            android:text="Haz un resumen de la trama:"
            android:textAlignment="center"
            android:textColor="@color/colorTextoBlanco"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etCabecera"
            tools:ignore="Autofill,HardcodedText,LabelFor,SpUsage,TextSizeCheck,TextViewEdits" />

        <EditText
            android:id="@+id/iniciarRelatoText7"
            android:layout_width="350dp"
            android:layout_height="162dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/boton_redondeado_blanco"
            android:fontFamily="@font/rajdhani"
            android:textAlignment="center"
            android:textColor="@color/colorPrincipalFondo"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtBuscador"
            tools:ignore="SpeakableTextPresentCheck" />

        <!-- BARRA INFERIOR -->

        <Button
            android:id="@+id/btnGuardarAutor"
            android:layout_width="172dp"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:text="Guardar autor/a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iniciarRelatoText7"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnContinuarTrama"
            android:layout_width="258dp"
            android:layout_height="51dp"
            android:layout_marginTop="24dp"
            android:text="CONTINUAR"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnGuardarAutor"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="411dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorSecundarioClaro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/btnBAck"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/toolbar2"
            app:srcCompat="@drawable/back"
            tools:ignore="ContentDescription" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
